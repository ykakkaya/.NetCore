
@model IEnumerable<EntityLayer.Concrete.Comment>




<div class="comment-top">
    <h4>YORUMLAR</h4>
    @{ if (Model.Count() == 0)
        {


            <h3>İlk Yorumu Siz Yapmak İster misiniz</h3>
        }
        else
        {
            @foreach (var item in Model)
            {
                <div class="media">
                    <img src="~/web/images/t1.jpg" alt="" class="img-fluid" />
                    <div class="media-body">
                        <h5 class="mt-0">@item.CommendUserName</h5>
                        <p>
                            @item.CommendContent
                        </p>
                    </div>
                </div>

            }
        }
    }





</div>

