    <link href='http://fonts.googleapis.com/css?family=Oswald:100,400,300,700' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,300italic' rel='stylesheet' type='text/css'>
    <!----//webfonts---->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <!--end slider -->
    <!--script-->
    <script type="text/javascript" src="~/webBlog/js/move-top.js"></script>
    <script type="text/javascript" src="~/webBlog/js/easing.js"></script>
    <!--/script-->
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            $(".scroll").click(function (event) {
                event.preventDefault();
                $('html,body').animate({ scrollTop: $(this.hash).offset().top }, 900);
            });
        });
    </script>
    <!---->

</head>

<div class="single">
    <div class="container">
        <div class="col-md-8 single-main">
            @{
                foreach (var item in Model.Deger1)
                {
                    <div class="single-grid">
                        <img src="@item.BlogResimUrl" alt="" />
                        <div>
                            <br />
                            <a href="/Blog/BlogDetay/@item.BlogId">@item.BlokBaslik</a>
                            <p>
                                @item.BlokAciklama.Substring(0,100)
                            </p>
                            <p>@item.BlokTarih.ToString("d")</p>

                        </div>

                    </div>
                    <br />
                }

            }

        </div>


        <div class="col-md-4 side-content">
            <div class="recent">
                <h3>SON YAZILAN BLOG'LAR</h3>
                @{
                    foreach (var item in Model.Deger3)
                    {
                        <ul>
                            <li><a href="/Blog/BlogDetay/@item.BlogId">@item.BlokBaslik</a></li>

                        </ul>
                    }
                }

            </div>
            <div class="comments">
                <h3>Son Yorum Yapanlar</h3>
                @foreach (var item in Model.Deger2)
                {
                    <ul>
                        <li><a href="/Blog/BlogDetay/@item.BlogId">@item.KullaniciAdi yorum yaptığı post a git</a></li>

                    </ul>
                }

            </div>
            <div class="clearfix">

            </div>



        </div>
        <div class="clearfix">

        </div>
    </div>
</div>






