@using StokMVC.Models.Entity
@model PagedList.IPagedList<TBLMusteri>
@using PagedList
@using PagedList.Mvc




@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}


<h2>MÜŞTERİ İŞLEMLERİ SAYFASI</h2>

<table id="tbl3" class="table table-bordered">
    <thead>

        <tr>
            <th>Müşteri ID</th>
            <th>Müşteri ADI</th>
            <th>Müşteri Soyadı</th>
            <th>MÜŞTERİ SİL</th>
            <th>MÜŞTERİ GÜNCELLE</th>

        </tr>
    </thead>

    <tbody>
        @{
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.MusteriId</td>
                    <td>@item.MusteriAd</td>
                    <td>@item.MusteriSoyad</td>
                    <td><a href="/Musteri/Sil/@item.MusteriId" class="btn btn-danger" onclick="alert('müşteri silindi');">SİL</a></td>
                    <td><a href="/Musteri/MusteriGuncelle/@item.MusteriId" class="btn btn-success">GÜNCELLE</a></td>


                </tr>

            }
        }
    </tbody>

</table>

@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("index", new { sayfa }))
<td><a href="/Musteri/YeniMusteriEkle" class="btn btn-primary">YENİ MÜŞTERİ EKLE</a></td>

<script type="text/javascript" src="https://cdn.datatables.net/v/bs-3.3.7/jq-2.2.4/jszip-3.1.3/pdfmake-0.1.27/dt-1.10.15/b-1.3.1/b-colvis-1.3.1/b-flash-1.3.1/b-html5-1.3.1/b-print-1.3.1/r-2.1.1/sc-1.4.2/se-1.2.2/datatables.min.js"></script>
<script>
    $(document).ready(function () {
        $('#tbl3').DataTable({
            language: {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
            }
        });
    });
</script>
