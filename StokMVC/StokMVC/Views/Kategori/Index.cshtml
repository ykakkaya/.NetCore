@using StokMVC.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TBLKategori>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<h2> KATEGORİ İŞLEMLERİ </h2>

<table id="tbl2" class="table table-bordered">
    <thead>
        <tr>
            <th>KATEGORİ ID</th>
            <th>KATEGORİ ADI</th>
            <th>KATEGORİ SİL</th>
            <th>KATEGORİ GÜNCELLE</th>
        </tr>


    </thead>

    <tbody>
        @{
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.KategoriId</td>
                    <td>@item.KategoriAd</td>
                    <td><a href="/Kategori/Sil/@item.KategoriId" class="btn btn-danger" onclick="alert('kategori silindi');">Sil</a></td>
                    <td><a href="/Kategori/KategoriGetir/@item.KategoriId" class="btn btn-success">GÜNCELLE</a></td>
                </tr>

            }
        }
    </tbody>


</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("index", new { sayfa }))

<a href="/Kategori/YeniKategoriEkle" class="btn btn-primary">YENİ KATEGORİ EKLE</a>

<script type="text/javascript" src="https://cdn.datatables.net/v/bs-3.3.7/jq-2.2.4/jszip-3.1.3/pdfmake-0.1.27/dt-1.10.15/b-1.3.1/b-colvis-1.3.1/b-flash-1.3.1/b-html5-1.3.1/b-print-1.3.1/r-2.1.1/sc-1.4.2/se-1.2.2/datatables.min.js"></script>
<script>
    $(document).ready(function () {
        $('#tbl2').DataTable({
            language: {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
            }
        });
    });
</script>
<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />